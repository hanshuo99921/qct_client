<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.qct_client.OrderActivity" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/jjr_Layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/border" >

            <ImageView
                android:id="@+id/Jjr_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:src="@android:drawable/star_big_off" />

            <TextView
                android:id="@+id/jjr_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/Jjr_imageView"
                android:background="#FFFF96"
                android:text="寄件人信息"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/addJjr_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:src="@android:drawable/ic_input_add" />

            <LinearLayout
                android:id="@+id/jjr_linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/jjr_textView"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/jjrname_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/jjrname_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFEECC"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="15dp" >

                    <requestFocus />
                </EditText>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jjr_linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/jjr_linearLayout1"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/jjrtel_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/jjrtel_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFEECC"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/jjr_linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/jjr_linearLayout2"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/jjraddr_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="寄件人地址："
                    android:textSize="15dp" />
                
                <Spinner
                    android:id="@+id/jjrDz_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/xzqh" />

                <EditText
                    android:id="@+id/jjraddr_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="#FFEECC"
                    android:ellipsize="end"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/sjr_Layout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/border" >

            <ImageView
                android:id="@+id/Sjr_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:src="@android:drawable/star_big_off" />

            <TextView
                android:id="@+id/sjr_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/Sjr_imageView"
                android:background="#FFFF96"
                android:text="收件人信息"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/addSjr_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:src="@android:drawable/ic_input_add" />

            <LinearLayout
                android:id="@+id/sjr_linearLayout1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sjr_textView"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/sjrname_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="姓名："
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/sjrname_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="2"
                    android:background="#FFEECC"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sjr_linearLayout2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sjr_linearLayout1"
                android:layout_marginLeft="1dp"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/sjrtel_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="联系电话："
                    android:textSize="15dp" />

                <EditText
                    android:id="@+id/sjrtel_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="#FFEECC"
                    android:ems="10"
                    android:inputType="number"
                    android:textSize="15dp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/sjr_linearLayout3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_below="@+id/sjr_linearLayout2"
                android:layout_marginBottom="4dp"
                android:layout_marginLeft="4dp"
                android:layout_marginTop="4dp" >

                <TextView
                    android:id="@+id/sjraddr_TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp"
                    android:text="收件人地址："
                    android:textSize="15dp" />
                <Spinner
                    android:id="@+id/sjrDz_spinner"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="4dp"
                    android:entries="@array/xzqh" />

                <EditText
                    android:id="@+id/sjraddr_EditText"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp"
                    android:layout_weight="1"
                    android:background="#FFEECC"
                    android:ellipsize="end"
                    android:ems="10"
                    android:inputType="text"
                    android:textSize="15dp" />
            </LinearLayout>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/bz_linearLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/sjr_Layout"
            android:layout_marginLeft="4dp"
            android:layout_marginTop="4dp"
            android:background="@drawable/border" >

            <ImageView
                android:id="@+id/Bz_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="4dp"
                android:src="@android:drawable/star_big_off" />

            <TextView
                android:id="@+id/bz_textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginTop="4dp"
                android:layout_toRightOf="@+id/Bz_imageView"
                android:background="#FFFF96"
                android:text="备注"
                android:textSize="24dp" />

            <ImageView
                android:id="@+id/addBz_imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginTop="4dp"
                android:layout_marginRight="4dp"
                android:src="@android:drawable/ic_input_add" />

            <EditText
                android:id="@+id/bz_EditText"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bz_textView"
                android:layout_marginTop="4dp"
                android:background="#FFEECC"
                android:ems="10"
                android:inputType="text"
                android:textSize="15sp" />
        </RelativeLayout>
    </LinearLayout>
	<Button
            android:id="@+id/button1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:textColor="@android:color/white"
            android:background="@drawable/border"
            android:textSize="24dp"
            android:text="提交" />
</RelativeLayout>